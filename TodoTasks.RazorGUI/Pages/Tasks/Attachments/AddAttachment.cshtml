@page "{todoId:int?}"
@model TodoTasks.RazorGUI.Pages.Tasks.Attachments.AddAttachmentModel
@{
    ViewData["Title"] = "Add new attachment";
}

<main class="container-fluid main-container">
    <form class="card mt-2" style="max-width: 40rem;" method="post" enctype="multipart/form-data">
        <section class="card-header">
            Add new attachments
        </section>
        <section class="card-body">
            <div >
                <input asp-for="@Model.TodoId" />
                <div class="form-group">
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" asp-for="@Model.UploadedFile" class="custom-file-input" accept=".txt, .xlsx, .doc, .ppt, .csv, .pdf" />
                            <label class="custom-file-label" asp-for="@Model.UploadedFile">Choose file</label>
                        </div>
                    </div>
                    <div>
                        <span asp-validation-for="@Model.UploadedFile" class="form-text text-danger small"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <input asp-for="@Model.Description" class="form-control" />
                    <span asp-validation-for="@Model.Description" class="form-text text-danger small"></span>
                </div>
            </div>
        </section>
        <section class="card-footer">
            <button type="submit" class="btn btn-Success">Save</button>
            <a class="btn btn-secondary" asp-page="/Tasks/Attachments/AttachmentManagement" asp-route-todoId="@Model.TodoId">Back</a>
        </section>
    </form>
</main>