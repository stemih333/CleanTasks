{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string"
    },
    "tenantId": {
      "type": "string"
    },
    "objectId": {
      "type": "string"
    },
    "keysPermissions": {
      "type": "array",
      "defaultValue": [ "all" ]
    },
    "secretsPermissions": {
      "type": "array",
      "defaultValue": [ "all" ]
    },
    "vaultSku": {
      "type": "string",
      "defaultValue": "Standard"
    },
    "enabledForDeployment": {
      "type": "bool",
      "defaultValue": false
    },
    "enabledForTemplateDeployment": {
      "type": "bool",
      "defaultValue": false
    },
    "enableVaultForVolumeEncryption": {
      "type": "bool",
      "defaultValue": false
    },
    "connectionStringSecret": {
      "type": "securestring"
    },
    "dbUserNameSecret": {
      "type": "securestring"
    },
    "dbPasswordSecret": {
      "type": "securestring"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "name": "[parameters('keyVaultName')]",
      "apiVersion": "2015-06-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "KeyVault"
      },
      "properties": {
        "enabledForDeployment": "[parameters('enabledForDeployment')]",
        "enabledForTemplateDeployment": "[parameters('enabledForTemplateDeployment')]",
        "enabledForVolumeEncryption": "[parameters('enableVaultForVolumeEncryption')]",
        "tenantId": "[parameters('tenantId')]",
        "accessPolicies": [
          {
            "tenantId": "[parameters('tenantId')]",
            "objectId": "[parameters('objectId')]",
            "permissions": {
              "keys": "[parameters('keysPermissions')]",
              "secrets": "[parameters('secretsPermissions')]"
            }
          }
        ],
        "sku": {
          "name": "[parameters('vaultSku')]",
          "family": "A"
        }
      },
      "resources": [
        {
          "type": "secrets",
          "name": "dbUserNameSecret",
          "apiVersion": "2015-06-01",
          "tags": { "displayName": "database username" },
          "properties": {
            "value": "[parameters('dbUserNameSecret')]"
          },
          "dependsOn": [
            "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "connectionStringSecret",
          "apiVersion": "2015-06-01",
          "tags": { "displayName": "connectionString" },
          "properties": {
            "value": "[parameters('connectionStringSecret')]"
          },
          "dependsOn": [
            "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "dbPasswordSecret",
          "apiVersion": "2015-06-01",
          "tags": { "displayName": "database user password" },
          "properties": {
            "value": "[parameters('dbPasswordSecret')]"
          },
          "dependsOn": [
            "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
          ]
        }
      ]
    }
  ],
  "outputs": {
  }
}
